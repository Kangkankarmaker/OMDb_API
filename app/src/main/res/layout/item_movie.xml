<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="8dp"
    android:background="@drawable/background"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true">


    <ImageView
        android:id="@+id/item_movie_poster"
        android:layout_width="140dp"
        android:layout_height="175dp"
        android:layout_margin="9dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/item_movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="title"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/item_movie_poster"
        app:layout_constraintTop_toTopOf="@+id/item_movie_poster" />

    <TextView
        android:id="@+id/item_movie_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="year"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/item_movie_title"
        app:layout_constraintTop_toBottomOf="@+id/item_movie_title" />

    <TextView
        android:id="@+id/item_movie_released"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="released"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/item_movie_year"
        app:layout_constraintTop_toBottomOf="@+id/item_movie_year" />

    <TextView
        android:id="@+id/item_movie_Genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Genre"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/item_movie_released"
        app:layout_constraintTop_toBottomOf="@+id/item_movie_released" />

    <TextView
        android:id="@+id/item_movie_runtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="120"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/item_movie_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="Language"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/item_movie_Genre"
        app:layout_constraintTop_toTopOf="@+id/item_movie_Genre" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Director  :"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/item_movie_Genre"
        app:layout_constraintTop_toBottomOf="@+id/item_movie_runtime" />

    <TextView
        android:id="@+id/item_movie_director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="TextView"

        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Runtime"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/item_movie_Genre"
        app:layout_constraintTop_toBottomOf="@+id/item_movie_language" />
</androidx.constraintlayout.widget.ConstraintLayout>